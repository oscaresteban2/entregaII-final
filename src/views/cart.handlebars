<div>
  <h1 class="title">Carrito de Compras</h1>
</div>
<div>
  <div>
    <div id="seccionCarrito" class="text-light p-5 ms-4rounded bg-black">
      <div class="products-box">
        {{#each products}}
        <div class="product-card card mb-3">
          <div class="card-body d-flex align-items-center">
            <img src="{{this.product.thumbnails}}" alt="Imagen del producto" class="card-img"
              style="width: 100px; height: 100px; object-fit: cover;">
            <div class="ms-3">
              <h3 class="card-title">{{this.product.title}}</h3>
              <p class="card-text">Precio: $ {{this.product.price}}</p>
              <div class="d-flex align-items-center">
                <button class="btn btn-sm btn-outline-primary me-2"
                  onclick="updateQuantity('{{this.product._id }}', -1)">-</button>
                <span id="quantity-{{this.product._id}}">{{this.quantity}}</span>
                <button class="btn btn-sm btn-outline-primary ms-2"
                  onclick="updateQuantity('{{this.product._id}}', 1)">+</button>
              </div>
              <button class="btn btn-outline-danger mt-2 btn-delete-in-cart" data-id="{{product._id}}">Eliminar</button>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <br>
  <hr>
  <div class="btnCart mt-3 text-center">
    <a href="/products"><button type="button" class="btn btn-dark">Regresar a Tienda</button></a>
    <a href="#"><button type="button" class="btn btn-dark">Realizar Compra</button></a>
    <button class="btn btn-outline-danger btn-deleteAll">Vaciar Carrito</button></a>
  </div>
</div>

<script src="/js/cart.js"></script>